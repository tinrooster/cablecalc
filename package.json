{
  "name": "cablecalc",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run check-types && next dev",
    "build": "npm run check-types && next build",
    "export": "next export",
    "start": "next start",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "generate-types": "ts-node scripts/typeCheck.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "postinstall": "simple-git-hooks",
    "check-types": "ts-node scripts/checkTypes.ts"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-radio-group": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.3",
    "autoprefixer": "latest",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.292.0",
    "next": "latest",
    "postcss": "latest",
    "react": "latest",
    "react-dom": "latest",
    "tailwind-merge": "^2.5.4",
    "tailwindcss": "latest"
  },
  "devDependencies": {
    "@shadcn/ui": "^0.0.4",
    "@types/node": "^22.8.6",
    "@types/react": "^18.3.12",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.14.0",
    "eslint-config-next": "^15.0.2",
    "glob": "^11.0.0",
    "lint-staged": "^15.2.10",
    "madge": "^8.0.0",
    "simple-git-hooks": "^2.11.1",
    "ts-morph": "^24.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run type-check && npm run lint",
    "pre-push": "npm run type-check"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run type-check",
      "npm run lint"
    ]
  }
}
